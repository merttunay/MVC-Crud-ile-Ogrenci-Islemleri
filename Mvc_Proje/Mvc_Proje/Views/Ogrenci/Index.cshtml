@model IEnumerable<Mvc_Proje.Models.Table>

@{
    ViewBag.Title = "Öğrenciler";
}

<h2>Öğrenciler</h2>

<p>
    @Html.ActionLink("Öğrenci Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OgrAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OgrSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OgrMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OgrAdres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OgrAd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrSoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrAdres)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.OgrID }) |
            @Html.ActionLink("Detay", "Details", new { id=item.OgrID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.OgrID })
        </td>
    </tr>
}

</table>
